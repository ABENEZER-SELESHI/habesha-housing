<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="forSalePage.css">
    <link rel="stylesheet" href="headbar.css">
    <title>Document</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('./nav/headbar.ejs') %>

    <section>
        <!-- title -->
        <h1>Sale homes</h1>

        <div class="card-collection">
            <% if (salehousings.length > 0) { %>
                <% salehousings.forEach(salehousing => { %>
                    <a href="/<%= salehousing._id %>">
                        <div class="card-container">
                            <div>
                                <img class="card-image" src="<%= salehousing.fullViewPicture %>" alt="">
                            </div>
                            <div class="card-content">
                                <div class="card-price">$<%= salehousing.price %></div>
                                <div class="card-rooms"><%= salehousing.number_of_rooms %> rooms</div>
                            </div>
                        </div>
                    </a>
                <% }) %>
            <% } else { %>
                <p>No houses available for sale at the moment, please visit us another time.</p>
            <% } %>    
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; abenezer seleshi. All Rights Reserved.</p>
    </footer>
</body>
</html>
