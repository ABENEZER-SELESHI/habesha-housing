<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="saleHouseDetails.css">
    <link rel="stylesheet" href="headbar.css">
    <title>Luxury House Details</title>
</head>
<body>
    <!-- Navbar -->
    <%- include('./nav/headbar.ejs') %>

    <div class="container">
        <!-- Main Section -->
        <section class="house-details">
            <div class="house-images">
                <!-- Full House Pictures Slider -->
                <div class="slider-container">
                    <img src="<%= salehousing.fullHousePictures[0] %>" alt="Full View 1" class="slider-image">
                    <img src="<%= salehousing.fullHousePictures[1] %>" alt="Full View 2" class="slider-image">
                    <img src="<%= salehousing.fullHousePictures[2] %>" alt="Full View 3" class="slider-image">
                </div>

                <!-- Room Types and Pictures -->
                <% salehousing.rooms.forEach(function(room) { %>
                    <div class="room-section">
                        <h2><%= room.roomType %></h2>
                        <div class="room-pictures">
                            <% room.roomPictures.slice(0, 6).forEach(function(picture, index) { %>
                                <img src="<%= picture %>" alt="<%= room.roomType %> Picture <%= index + 1 %>" 
                                     onclick="displayLargeImage('<%= picture %>')">
                            <% }) %>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- House Information -->
            <div class="house-info">
                <h2>Luxury House in <%= salehousing.location %></h2>
                <p class="description"><%= salehousing.description %></p>
                
                <div class="details">
                    <p><strong>Price:</strong> $<%= salehousing.price %></p>
                    <p><strong>Rooms:</strong> <%= salehousing.rooms.length %> types</p>
                    <p><strong>Location:</strong> <%= salehousing.location %></p>
                    <span>
                        <button class="submit btn">Buy</button>
                    </span>
                </div>
            </div>

            <!-- Large Image Display Section -->
            <div class="large-image-display" id="largeImageDisplay">
                <!-- Clicked image will be displayed here -->
            </div>

        </section>

        <!-- Footer -->
        <footer>
            <p>&copy; 2024 Abenezer Seleshi. All Rights Reserved.</p>
        </footer>
    </div>

    <script>
        // Function to display the clicked image in a larger size
        function displayLargeImage(imageSrc) {
            const largeImageDisplay = document.getElementById('largeImageDisplay');
            largeImageDisplay.innerHTML = `<img src="${imageSrc}" alt="Large View">`;
        }
    </script>
</body>
</html>
