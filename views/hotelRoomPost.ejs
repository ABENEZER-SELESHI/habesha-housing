<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="hotelRoomPost.css">
    <link rel="stylesheet" href="headbar.css">
    <title>Post House - Lysena</title>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Select form elements
            const priceInput = document.getElementById("price");
            const luxuryHouseDiv = document.querySelector(".luxury-house-group");

            // Hide luxury house checkbox by default
            luxuryHouseDiv.style.display = "none";

            // Show luxury house checkbox only if price is more than 3,000,000
            priceInput.addEventListener("input", function() {
                const priceValue = parseInt(priceInput.value);
                if (priceValue > 3000000) {
                    luxuryHouseDiv.style.display = "block";
                } else {
                    luxuryHouseDiv.style.display = "none";
                }
            });
        });
    </script>
</head>
<body>
    <!-- Header/Navbar -->
    <%- include('./nav/headbar.ejs') %>

    <!-- Post House Form Section -->
    <section class="post-house-form">
        <h1>Post a House</h1>

        <form action="/post-house" method="POST" enctype="multipart/form-data">

            <!-- Full View Picture -->
            <div class="form-group">
                <label for="fullViewPicture">Full View Picture of the House</label>
                <input type="file" id="fullViewPicture" name="fullViewPicture" accept="image/*" required>
            </div>

            <!-- Number of Rooms -->
            <div class="form-group">
                <label for="number_of_rooms">Number of Rooms</label>
                <input type="number" id="number_of_rooms" name="number_of_rooms" placeholder="Enter number of rooms" required>
            </div>

            <!-- Room Pictures -->
            <div class="form-group">
                <label for="roomPictures">Pictures your Rooms</label>
                <input type="file" id="roomPictures" name="roomPictures" accept="image/*" required>
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" name="price" placeholder="Enter price" required>
            </div>

            <!-- Luxury House Category (hidden initially) -->
            <div class="form-group luxury-house-group">
                <label for="luxuryHouse">Luxury House Category</label>
                <input type="checkbox" id="luxuryHouse" name="luxuryHouse">
            </div>

            <!-- Location -->
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" placeholder="Enter location" required>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="5" placeholder="Enter a brief description of the house" required></textarea>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="cta-button">Post House</button>
        </form>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; abenezer seleshi. All Rights Reserved.</p>
    </footer>
</body>
</html>
